<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tool:context=".presentation.ui.login.LoginFragment">

        <EditText
            android:id="@+id/reservation_edit_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:autofillHints="enter reservation system"
            android:hint="@string/cookie_serial_hint"
            android:inputType="text"
            tool:ignore="TextFields" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/cookie_start_button" />

    </LinearLayout>

</layout>